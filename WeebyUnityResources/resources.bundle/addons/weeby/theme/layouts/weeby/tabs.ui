$header = view [
    zIndex: 3000

    // header is only 80px high, but back click region is 100px high
    // so set our height to 100px and make input events not work on
    // this view (only on subviews)
    size: 576x100
    canHandleEvents: false

    // click region for the back button
    $back = view [
        zIndex: 10
        height: 100
        width: 100
        y: 0
        x: 0

        // back button image
        $backImage = view [
            background: weeby/arrow_down.png
            height: 45
            width: 45
            x: 15
            y: 13
        ]
    ]

    // background header bar
    view [
        background: weeby/header_bg.png
        size: 576x80
    ]
    
    sep = view [
        background: weeby/divider.png
        height: 70
        width: 4
        x: 75
        y: 0
        font: 11px
    ]
    
    $title = view [
        text: tosLogin
        textAlign: left
        font: 30px #fff Helvetica
        x: 105
        y: 8
        width: 100
        height: 50
    ]
   
]

$tabs = view [
    x: 0
    y: 50
    size: 576x125
    zIndex: 3000
    background: #F2F2F2

    view [
        background: #333A49
        size: 576x1
    ]
    
    $tab(tab) [
        visible: false
        view(tabText) [
            text: more
        ]
    ]
    
    $timeline(tab) [
        x: 0
        visible: false
        view(tabText) [
            text: timeline
        ]
    ]

    $chats(tab) [
        x: 384
        
        $unreadNotification [
            background: frame_notification.png
            size: 50x50
            zIndex: 100
            x: 100
            y: 1
            
            $unreadCount [
                x: 5
                y: 2
                size: 40x40
                text: inboxCountDefaultText
                font: 20px #FFF Helvetica
                autoFontSize: true
                horizontalAlign: center
            ]
        ]

        view(tabImage, chatImage)

        view(tabText) [
            text: chats
        ]
    ]

    $friends(tab) [
        x: 192
        
        view(tabImage, friendsImage)

        view(tabText) [
            text: friends
        ]
    ]

    $myProfile(tab) [
        x: 0

        $profilePhoto = image(profileImage)

        view(tabImage, profileFrame)

        view(tabText) [
            text: profile
        ]
    ]
]

tab = style [
    y: 1
    size: 192x124
    background: #F2F2F2
    
    state(active) [
        background: #333A49
    ]
]

tabText = style [
    y: 80
    size: 192x35
    horizontalAlign: center
    font: 20px #444
    
    state(active) [
        font: 20px #e87625
    ]
]

tabImage = style [
    x: 60
    y: 12
    size: 70x70
]

chatImage = style [
    background: weeby/icon_chat.png

    state(active) [
        background: weeby/icon_chat_active.png
    ]
]

friendsImage = style [
    background: weeby/icon_friends.png
    state(active) [
        background: weeby/icon_friends_active.png
    ]
]

profileImage = style [
    x: 67
    y: 18
    size: 60x60
]

profileFrame = style [
    background: weeby/frame_tab_profile.png
    size: 75x75

    state(active) [
        background: weeby/frame_tab_profile_active.png
    ]
]