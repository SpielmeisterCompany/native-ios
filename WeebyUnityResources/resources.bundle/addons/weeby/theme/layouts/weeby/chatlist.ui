$background = view [
    hasStatus: false
    pushTransition: slideup
]

$chatList = view [
    zIndex: 2000
    y: 68
    weebyFullScreen: true

    $search = view [
    	x: 0
	    y: 0
	    size: 576x75
        background: #F2F2F2
        
        $searchBox = editText [
        	y: 15
            x: 9
        	size: 490x50
	    	background: weeby/frame_search.png 9slice
    	    slices: 27 22
            
            font: 24px #888 Helvetica
            horizontalAlign: left
            hint: search
            
            paddingTop: -2
			paddingLeft: 70
            
            view [
            	x: 25
                y: 10
                size: 30x30
            	background: weeby/icon_search.png
            ]
            
            view [
                x: 70
                y: 9
                size: 406x30
            ]
        ]
    ]
    
    view [
    	x: 0
        y: 75
        size: 576x1
        background: #AAA
    ]
    
    $contents = list [
        background: #e3eaf4
        x: 0
        y: 76
        size: 576x596
        weebyExpand: true
    ]
]

$row = cell [
    size: 576x101

    $photo = image [
    	size: 100x100
    ]

	$nickname = text [
    	x: 120
        y: 16
	    size: 300x40
        autoFontSize: true
    	font: bold 30px #000 Helvetica
        verticalAlign: top
    ]

    $lastMessage = text [
    	x: 120
        y: 55
	    size: 440x40
    	font: bold 26px #666 Helvetica
        verticalAlign: top
        clip: true
    ]
    
    $date = text [
    	x: 440
        y: 25
	    size: 120x40
    	text: yes
    	font: 17px #666 Helvetica
        verticalAlign: top
		horizontalAlign: right
    ]
]

tab = style [
	size: 115x125
    background: #F2F2F2
    
    state(active) [
    	background: #333A49
    ]
]

tabText = style [
	y: 80
	size: 115x35
    horizontalAlign: center
	font: 20px #444
    
    state(active) [
    	font: 20px #e87625
    ]
]
