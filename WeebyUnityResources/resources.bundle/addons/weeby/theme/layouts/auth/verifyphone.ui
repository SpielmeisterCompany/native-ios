$background = view [
    size: 576x1024
    hasStatus: false
    hasProfileIcon: false
    pushTransition: slideup
    x: 0
    y: 0
]

$verifyPhone = view [
	zIndex: 2000
	size: 576x1024
    weebyFullScreen: true
    showStatusBar: true
    
    view [
        background: #ffffff
        x: 0
        y: 0
        size: 576x1024 
    ]
    
    view [
        background: authflow/header.png 9slice
        slices: 1 1 9 1
        x: 0
        y: 0
        size: 576x85
        
        view [
            background: authflow/back.png
            x: 10
            y: 9
            size: 55x55
        ]
        
        view [
            background: #2b2f37
            x: 77
            y: 7
            size: 1x67
        ]
        
        view [
            background: #acbcda
            x: 80
            y: 7
            size: 1x67
        ]
        
        view [
            text: authSetupAccount
            font: 28px #ffffff
            x: 100
            y: 30
            size: 10x10
            strokeWidth: 0
        ]
        
        $backButton = view [
            x: 0
            y: 0
            size: 100x85
        ]
    ]
    
    $countrySelect = editText(textBoxAuth) [
    	x: 20
        y: 117
        size: 538x80
        font: #303030 28px
        fontFamily: helvetica
        hint: chooseCountry
        inputType: default
        maxLength: 50
    ]
    
    $promptCountry = editText(textBoxAuth) [
        x: 20
        y: 225
        size: 100x80
        font: #303030 28px
        fontFamily: helvetica
        hint: countryCode
        hintJs: countryCodeAbbr
        inputType: number
        maxLength: 4
        textAlign: center
    ]
        
    $promptPhone = editText(textBoxAuth) [
        x: 134
        y: 225
        size: 425x80
        font: #303030 28px
        fontFamily: helvetica
        hint: phone
        inputType: phone
        maxLength: 17
        textAlign: left
        keyboardType: PhonePad
    ]
    
    $verifyButton = button(buttonAction) [
    	x: 20
        y: 333
        size: 541x103
        
        view [
        	x: 0
            y: 11
            size: 530x80
            font: #ffffff 32px
            text: register
            horizontalAlign: center
            wrap: true
        ]
    ]
]
