$background = view [
    background: bkgd_leaderboard_dark.png cover
    size: 576x1024
    hasStatus: true
]

$gift = view [

    // background: frame_modal_new.9.png
    margin: 90 10 27 12
    size: 576x964

    // main content area
    view [
        x: 10 
        y: 120
        background: frame_modaldefault.9.png 9slice
        slices: 40 40 40 40
        size: 560x650
        padding: 1 5
        margin: 15 22 100
        clip: false

        view(mainTitle) [
            text: giftsTitle
        ]
        
        $closeButton = view [
            x: 450
            y: 50
            size: 80x85
            background: button_close.png
            zIndex: 99
        ]
        
        // leaderboard rows
        view [
            x: 40
            y: 140
            size: 480x465
            background: frame_innermodal.9.png 9slice
            slices: 28 27 28 29
            
            $rows [
                x: 10
                y: 10
                size: 470x440
            ]
        ]
    ]

    $acceptButton = button(mainButton) [
        view [
            x: 0
            y: 0
            size: 250x80
            font: 50px #FFFFFF 8px #000088
            text: acceptAll
            horizontalAlign: center
        ]
    ]
]

wrapContent = style [
    height: wrapContent
    width: wrapContent
]

expandHeight = style [
    height: wrapContent
    width: matchParent
]

matchParent = style [
    height: matchParent
    width: matchParent
]

footerButton = style(buttonBasic) [
    width: 95
    height: 95
]

footerButtonIcon = style [
    size: 50x50
    x: 22
    y: 24
    centerVertical: true
    centerHorizontal: true
]

$row = view [

    size: 460x96
    
    view [
        size: 460x94
        background: frame_list.9.png 9slice
        slices: 15 15 15 15
    ]

    $icon = image [
        x: 16
        y: 17
        size: 60x60
        background: icon_pic_rounded.png
    ]

view [
        x:11
        y:12
        background:profile_border.png
        size: 70x70
    ]

    $nickname = view [
        x: 100
        y: 15
        size: 260x65
        font: #b3775b 40px
        text: yes
        autoFontSize: true
    ]

    $acceptButton = view(buttonCheck) [
        x: 370
        y: 8
        size: 75x75
    ]
]